---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import EcosystemExplorer from '../components/EcosystemExplorer';
import { getEntry } from 'astro:content';

const currentPath = Astro.url.pathname;
const entry = await getEntry('ecosystem', 'plasma');
const projects = entry.data.projects;
---
<BaseLayout title="Plasma Ecosystem" description="Discover builders and dApps across the Plasma network.">
  <SiteHeader slot="header" currentPath={currentPath} />
  <section class="hero">
    <div>
      <h1>Explore the Plasma ecosystem</h1>
      <p>
        Browse leading projects building in the Plasma network. Filter by category, scan quick
        summaries, and jump directly into dApps.
      </p>
    </div>
  </section>
  <EcosystemExplorer projects={projects} client:load />
</BaseLayout>

<style>
  .hero {
    margin-bottom: 32px;
  }

  .hero h1 {
    margin: 0 0 12px;
    font-size: clamp(32px, 4vw, 44px);
    letter-spacing: -0.02em;
  }

  .hero p {
    margin: 0;
    max-width: 640px;
    color: var(--text-muted);
    font-size: 16px;
    line-height: 1.6;
  }
</style>
