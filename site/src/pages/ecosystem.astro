---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import EcosystemExplorer from '../components/EcosystemExplorer';
import QuestProvider from '../components/QuestProvider';
import { getEntry } from 'astro:content';

const currentPath = Astro.url.pathname;
const entry = await getEntry('ecosystem', 'plasma');
const projects = entry.data.projects;
---
<BaseLayout title="Plasma Ecosystem" description="Discover builders and dApps across the Plasma network.">
  <SiteHeader slot="header" currentPath={currentPath} />
  <QuestProvider client:load />
  <EcosystemExplorer projects={projects} client:load />
</BaseLayout>

