---
import { stripTrailingSlash, withBasePath } from '@lib/basePath';

const navItems = [
	{ href: withBasePath('/'), label: 'Quests' },
	{ href: withBasePath('/ecosystem/'), label: 'Ecosystem' }
];
const { currentPath = '/' } = Astro.props;
const normalizePath = (value) => {
	if (!value) return '/';
	return stripTrailingSlash(value) || '/';
};

const isActive = (href) => normalizePath(currentPath) === normalizePath(href);
---
<header class="topbar">
	<div class="brand">
		<span style="font-size: 28px;">☀️</span>
    <span>June</span>
  </div>
  <nav>
    {navItems.map((item) => (
      <a
        href={item.href}
        class={['nav-link', isActive(item.href) ? 'active' : ''].join(' ')}
      >
        {item.label}
      </a>
    ))}
  </nav>
  <div id="quest-topbar-extra" class="topbar-extra"></div>
</header>

<style>
  .topbar {
    position: sticky;
    top: 0;
    z-index: 40;
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px var(--page-padding, 32px) 16px;
    background: #2a2a2a;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    flex-wrap: wrap;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .brand span {
    font-size: 18px;
  }

  nav {
    display: flex;
    gap: 16px;
  }

  .topbar-extra {
    margin-left: auto;
    flex: 1 1 auto;
    display: flex;
    justify-content: flex-end;
  }

  .nav-link {
    position: relative;
    font-weight: 500;
    padding: 6px 12px;
    border-radius: 999px;
    color: rgba(245, 245, 247, 0.68);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.08);
  }

  .nav-link.active {
    color: var(--text-primary);
    background: var(--accent-soft);
    box-shadow: 0 0 0 1px rgba(93, 91, 255, 0.28);
  }

  @media (max-width: 640px) {
    .topbar {
      padding-inline: 20px;
      gap: 12px;
    }

    .brand span {
      display: none;
    }

    nav {
      order: 3;
      width: 100%;
      margin-left: 0;
      justify-content: center;
    }

    .topbar-extra {
      order: 4;
      width: 100%;
      justify-content: flex-start;
    }
  }
</style>
